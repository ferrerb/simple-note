<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <FrameLayout
        android:id="@+id/notes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <ImageButton
        android:layout_height="@dimen/btn_floating_action_diameter"
        android:layout_width="@dimen/btn_floating_action_diameter"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/action_button_margin"
        android:layout_marginEnd="@dimen/action_button_margin"
        android:src="@android:drawable/ic_input_add"/>
</LinearLayout>
